<view class="chat"><view class="chat-area page"><scroll-view class="overflow-hidden overflow-y-scroll area" scroll-y="true" scroll-into-view="{{childrenId}}"><block wx:for="{{chatList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view id="{{'id-'+index}}"><block wx:if="{{item.current_id!==currentId}}"><view style="display:flex;margin:10px 10px 10px 10px;justify-content:flex-start;align-items:center;flex-wrap:nowrap;"><image style="display:flex;flex-direction:column;justify-content:flex-start;width:40px;height:40px;border-radius:20px;object-fit:cover;" src="{{item.shop_id===currentId?userImg:shopImg}}"></image><view style="display:inline-block;max-width:60%;word-break:break-all;background-color:greenyellow;padding:10px;border-radius:10px;margin-left:10px;">{{''+item.content+''}}</view></view></block><block wx:else><view style="display:flex;margin:10px 10px 10px 10px;justify-content:flex-end;align-items:center;flex-wrap:nowrap;"><view style="display:inline-block;max-width:60%;word-break:break-all;background-color:greenyellow;padding:10px;border-radius:10px;margin-right:10px;">{{''+item.content+''}}</view><image style="display:flex;flex-direction:column;justify-content:flex-start;width:40px;height:40px;border-radius:20px;object-fit:cover;" src="{{item.user_id===currentId?userImg:shopImg}}"></image></view></block></view></block></scroll-view></view><view class="footer"><input class="text" type="text" confirm-type="send" maxlength="100" placeholder="请输入内容" data-event-opts="{{[['input',[['change',['$event']]]]]}}" value="{{sendText}}" bindinput="__e"/><button data-event-opts="{{[['tap',[['sendMessage',['$event']]]]]}}" class="button" bindtap="__e">发送</button></view></view>